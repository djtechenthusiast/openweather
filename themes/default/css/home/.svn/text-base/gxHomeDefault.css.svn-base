/* BEGIN: Page Header Styles */
.well h3 {
	color: #66429A;
	margin-top: 10px;
	font-size: 21px;
}

.well {
	min-height: 20px;
	padding: .2px 10px .2px 10px;	
	margin-bottom: 5px;
	margin-top: 5px;
	background-color: #ebebeb;
	border: 0px solid #ebebeb;
	border-radius: 4px;
	-webkit-box-shadow: inset 0 0px 0px rgba(0, 0, 0, 0);
	box-shadow: inset 0 0px 0px rgba(0, 0, 0, 0);
}

/* END: Page Header Styles  */

.preferenceHeader {
color: #66429A;
font-size: 21px;
border-bottom: 1px dashed #66429A;
	
}

.carousel {
position: relative;
height: 200px;
}

.carousel-control {
position: absolute;
top: 0;
bottom: 0;
left: 0;
width: 10%;
font-size: 20px;
color: #fff;
text-align: center;
text-shadow: 0 1px 2px rgba(0, 0, 0, .6);
filter: alpha(opacity=50);
opacity: .5;
}

.carousel-control.left {
background-image: -webkit-linear-gradient(left, rgba(0, 0, 0, .5) 0%, rgba(0, 0, 0, .0001) 0%);
background-image: -o-linear-gradient(left, rgba(0, 0, 0, .5) 0%, rgba(0, 0, 0, .0001) 0%);
background-image: -webkit-gradient(linear, left top, right top, from(rgba(0, 0, 0, .5)), to(rgba(0, 0, 0, .0001)));
background-image: linear-gradient(to right, rgba(0, 0, 0, .5) 0%, rgba(0, 0, 0, .0001) 0%);
filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#80000000', endColorstr='#00000000', GradientType=1);
background-repeat: repeat-x;
}

.carousel-control.right {
background-image: -webkit-linear-gradient(left, rgba(0, 0, 0, .5) 0%, rgba(0, 0, 0, .0001) 0%);
background-image: -o-linear-gradient(left, rgba(0, 0, 0, .5) 0%, rgba(0, 0, 0, .0001) 0%);
background-image: -webkit-gradient(linear, left top, right top, from(rgba(0, 0, 0, .5)), to(rgba(0, 0, 0, .0001)));
background-image: linear-gradient(to right, rgba(0, 0, 0, .5) 0%, rgba(0, 0, 0, .0001) 0%);
filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#80000000', endColorstr='#00000000', GradientType=1);
background-repeat: repeat-x;
}

.carousel-indicators {
	display:none;
}

#content {
height: auto;
min-height: 81%;
position: relative;
}

.ui-datepicker {
width: 365px;
padding: .2em .2em 0;
}



.ui-datepicker table {
width: 100%;
font-size: 14px;
border-collapse: collapse;
margin: 0 0 .4em 0;
height: 182px;
}

#calendar-panel-content {
margin: 5px 0 0 0;
padding: 2px;
width: 350px;
height: 231px;
border-radius: 5px;
border: 0.0em solid #ff0000;
}


.ticker-controls {
float: right;
margin: 8px 21px 7px 24px;
width: 70px;
}


.panel-headingDefault {
padding: 5px 5px;
border-bottom: 0px solid transparent;
border-top-left-radius: 0px;
border-top-right-radius: 0px;
background-color: #00A8E7;
color: #FFF;
border-color: #ddd;
}

.panel-default>.panel-headingDefault:hover {
background-color: #00A8E7;
color: #FFF;
border-color: #ddd;
}

.panel-default>.panel-headingDefault:active {
background-color: #00A8E7;
color: #FFF;
border-color: #ddd;
}


.ticker-panel {
width: 100%;
height: 36px;
background: #ffeaa9;
margin: 10px 0 0px 0;
-moz-box-shadow: inset 0 0 10px #ccc;
-webkit-box-shadow: inset 0 0 10px #ccc;
box-shadow: inset 0 0 10px #ccc;
border-radius: 5px;
border: 0 solid #ff0000;
}

.ticker-controls {
	display:none;
}




.widgetsLabel {
display:block;
text-align:center;	
